<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.doomedforfailure.checkboxes.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:text="@string/title"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/title_bar_text" />

    <CheckBox
        android:text="@string/dog_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/checkBoxDog" />

    <CheckBox
        android:text="@string/cat_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxCat"
        android:layout_below="@+id/checkBoxDog"
        android:layout_alignStart="@+id/checkBoxDog" />

    <CheckBox
        android:text="@string/drag_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxDragon"
        android:layout_below="@+id/checkBoxCat"
        android:layout_alignStart="@+id/checkBoxCat" />

    <Button
        android:text="@string/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/showButtonID"
        android:layout_below="@+id/checkBoxDragon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/text_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/showText"
        android:layout_below="@+id/showButtonID"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
